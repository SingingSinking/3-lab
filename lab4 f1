using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	unsigned i, T;
	int tmp = 0;
	int* pA = new int[100];
	int B = 0;
	//float a[size], ogran;
	fstream f, f1, f2, f3;
	cout << "Введите ограничение по значению:" << " ";
	cin >> B;
	f.open("vvod.txt", ios::in);
	if (f.is_open() == 0) {
		cout << "Error f\n";
		return 0;
	}
	else {
		cout << "Good. Continue f\n";
		f >> T;
		if (T < 0) {
			T = 0;
		}
		i = 0;
		while (1) {
			f >> tmp;
			if (f.eof()) break;
			// f >> tmp;
			i++;
		}
		T = i;
	}
	pA = new int[T];
	f.close();
	f.open("vvod.txt", ios::in);
	if (f.is_open() == 0) {
		cout << "Error f\n";
		return 0;
	}
	else {
		float sum = 0;
		f1.open("vivod.txt", ios::out);
		if (f1.is_open() == 0) {
			cout << "Error f1\n";
			return 0;
		}
		else {
			cout << "Good. Continue f1\n";
			f1 << "Количество элементов: " << T << endl;
			cout << "Количество элементов: " << T << endl;
			for (i = 0; i <= T; i++) {
				f >> T;
				f >> *(pA + i);
				sum = 0;
			} 
			for (i = 0; i <= T; i++) {
				if (*(pA + i) > B) {
					sum += *(pA + i);
				}
			}
			f1 << '\n' << "Сумма: " << sum << endl;
			cout << "Сумма: " << sum << endl;
		}

	}
	f1 << "Массив: ";
	for (int i = 0; i < T; i++) f1 << *(pA + i) << " "; delete[] pA;
	f.close(); f1.close();
}
